<% include ./partials/header %>

<div class="container">
  <div class="map-index-message">
    <h2>Check out some recently created maps</h2>
  </div>
  <% for (var map of maps) { %>
  <ol class="map-list">
    <li class="map-object">
      <div class="map-boarder">
        <div class="map-shot">
          <div class="map-img">
            <a class="map-link" href="/maps/<%= map.id %>">
              <picture>
                <img class="screenshot" src="https://maps.googleapis.com/maps/api/staticmap?center=<%= map.latitude %>,<%= map.longitude %>&zoom=14&size=200x150&key=AIzaSyCri7Bud131ZI5QakCVxsPsV2cDZTQkU2g">
              </picture>
            </a>
          </div>
          <div class="tools">
            <a class="map-name-link" href="/maps/<%= map.id %>"><%= map.name %></a>
            <div class="fav">
              <span class="toggle-fav">0</span>
            </div>
          </div>
        </div>
      </div>
      <h2 class="map-creator">
        <span class="creator-id">
          <a class="user-profile-link" href="#"><%= map.creator_id %></a>
        </span>
      </h2>
    </li>
  </ol>
  <% } %>
</div>

<% include ./partials/footer %>
