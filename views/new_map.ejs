<% include ./partials/header %>

<section>
  <h3 class="mb-4">New Map</h3>

  <form action="/maps" method="POST">
    <div class="form-group mb-2">
      <div class="my-2" style="display: flex;">
        <label for="name">Name:</label>
        <input class="form-control mt-0" type="text" name="name" style="width: 300px; margin: 1em" required>
      </div>
      <div class="my-2" style="display: flex;">
        <label for="location" style="margin-left: 5px">Location:</label>
        <input class="form-control mt-0" type="text" name="location" style="width: 300px; margin: 1em" required>
      </div>
      <button type="submit" class="btn btn-lg btn-primary">Submit</button>
    </div>
  </form>
</section>

